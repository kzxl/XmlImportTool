<Window x:Class="XmlImportTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:XmlImportTool.UI.ViewModel"
        mc:Ignorable="d"
        Title="XML Import Tool" Height="600" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- File Selection -->
        <GroupBox Header="XML File" Grid.Row="0" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding XmlFilePath, Mode=OneWay}" IsReadOnly="True" VerticalContentAlignment="Center"/>
                <Button Content="Browse..." Grid.Column="1" Margin="5,0,0,0" Command="{Binding BrowseCommand}"/>
            </Grid>
        </GroupBox>

        <!-- Database Configuration -->
        <GroupBox Header="Database" Grid.Row="1" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="DB Provider:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" ItemsSource="{Binding DbProviders}" SelectedItem="{Binding SelectedDbProvider}" Margin="5" VerticalContentAlignment="Center"/>

                <Label Content="Server:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding ConnectionInfo.Server, UpdateSourceTrigger=PropertyChanged}" Margin="5" VerticalContentAlignment="Center"/>

                <Label Content="Database:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding ConnectionInfo.Database, UpdateSourceTrigger=PropertyChanged}" Margin="5" VerticalContentAlignment="Center"/>

                <CheckBox Content="Trusted Connection (Windows Auth)" IsChecked="{Binding ConnectionInfo.TrustedConnection}" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" VerticalAlignment="Center"/>

                <Label Content="User:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding ConnectionInfo.User, UpdateSourceTrigger=PropertyChanged}" Margin="5" VerticalContentAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ConnectionInfo.TrustedConnection}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Label Content="Password:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding ConnectionInfo.Password, UpdateSourceTrigger=PropertyChanged}" Margin="5" VerticalContentAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ConnectionInfo.TrustedConnection}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Button Content="Test Connection" Grid.Row="6" Grid.Column="1" Command="{Binding TestConnectionCommand}" Margin="5" HorizontalAlignment="Left" Width="120"/>

                <Label Content="Connection String:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding ConnectionString}" Margin="5" VerticalAlignment="Center" TextWrapping="Wrap"/>

            </Grid>
        </GroupBox>

        <!-- Data Preview -->
        <GroupBox Header="Preview" Grid.Row="2">
            <DataGrid ItemsSource="{Binding PreviewData}" IsReadOnly="True" AutoGenerateColumns="True"/>
        </GroupBox>

        <!-- Action -->
        <Button Content="Import" Grid.Row="3" HorizontalAlignment="Right" Width="120" Height="30" Margin="0,10,0,0" Command="{Binding ImportCommand}"/>
    </Grid>
</Window>
